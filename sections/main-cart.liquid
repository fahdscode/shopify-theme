{%- comment -%}
  Main Cart Section - Oppozite Wears
  Full cart page
{%- endcomment -%}

{%- style -%}
  .cart-page {
    padding: var(--section-spacing) var(--container-padding);
  }
  
  .cart-container {
    max-width: var(--container-max);
    margin: 0 auto;
  }
  
  .cart-header {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
  }
  
  .cart-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 400;
    margin: 0;
  }
  
  .cart-empty {
    text-align: center;
    padding: var(--spacing-3xl) 0;
  }
  
  .cart-empty-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto var(--spacing-lg);
    color: var(--muted-foreground);
  }
  
  .cart-empty-title {
    font-family: var(--font-display);
    font-size: 1.5rem;
    margin-bottom: var(--spacing-sm);
  }
  
  .cart-empty-text {
    color: var(--muted-foreground);
    margin-bottom: var(--spacing-lg);
  }
  
  .cart-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
  }
  
  @media (min-width: 1024px) {
    .cart-grid {
      grid-template-columns: 2fr 1fr;
    }
  }
  
  .cart-items {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }
  
  .cart-item {
    display: grid;
    grid-template-columns: 100px 1fr auto;
    gap: var(--spacing-md);
    padding-bottom: var(--spacing-lg);
    border-bottom: 1px solid var(--border);
  }
  
  @media (min-width: 640px) {
    .cart-item {
      grid-template-columns: 120px 1fr auto;
    }
  }
  
  .cart-item-image {
    aspect-ratio: 3/4;
    overflow: hidden;
    background: var(--muted);
  }
  
  .cart-item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .cart-item-details {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }
  
  .cart-item-title {
    font-family: var(--font-display);
    font-size: 1rem;
    margin: 0;
  }
  
  .cart-item-title a {
    color: inherit;
    text-decoration: none;
  }
  
  .cart-item-title a:hover {
    opacity: 0.7;
  }
  
  .cart-item-variant {
    font-size: 0.875rem;
    color: var(--muted-foreground);
    margin: 0;
  }
  
  .cart-item-price {
    font-size: 0.875rem;
    margin-top: var(--spacing-xs);
  }
  
  .cart-item-quantity {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    margin-top: var(--spacing-sm);
  }
  
  .cart-item-quantity-btn {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--muted);
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
  .cart-item-quantity-btn:hover:not(:disabled) {
    background: var(--foreground);
    color: var(--background);
  }
  
  .cart-item-quantity-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
  
  .cart-item-quantity-value {
    width: 40px;
    text-align: center;
    font-size: 0.875rem;
  }
  
  .cart-item-remove {
    background: none;
    border: none;
    font-size: 0.75rem;
    color: var(--muted-foreground);
    text-decoration: underline;
    cursor: pointer;
    margin-top: var(--spacing-sm);
  }
  
  .cart-item-remove:hover {
    color: var(--foreground);
  }
  
  .cart-item-total {
    font-family: var(--font-display);
    font-size: 1rem;
    text-align: right;
  }
  
  .cart-summary {
    background: var(--muted);
    padding: var(--spacing-xl);
    height: fit-content;
    position: sticky;
    top: calc(var(--header-height) + var(--spacing-lg));
  }
  
  .cart-summary-title {
    font-family: var(--font-display);
    font-size: 1.25rem;
    margin: 0 0 var(--spacing-lg);
    padding-bottom: var(--spacing-md);
    border-bottom: 1px solid var(--border);
  }
  
  .cart-summary-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-sm) 0;
  }
  
  .cart-summary-label {
    font-size: 0.875rem;
    color: var(--muted-foreground);
  }
  
  .cart-summary-value {
    font-size: 0.875rem;
  }
  
  .cart-summary-total {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--spacing-md);
    margin-top: var(--spacing-md);
    border-top: 1px solid var(--border);
  }
  
  .cart-summary-total-label {
    font-family: var(--font-display);
    font-size: 1rem;
  }
  
  .cart-summary-total-value {
    font-family: var(--font-display);
    font-size: 1.25rem;
  }
  
  .cart-summary-note {
    font-size: 0.75rem;
    color: var(--muted-foreground);
    margin-top: var(--spacing-md);
    text-align: center;
  }
  
  .cart-checkout-btn {
    width: 100%;
    margin-top: var(--spacing-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-sm);
  }
  
  .cart-continue {
    display: block;
    text-align: center;
    margin-top: var(--spacing-md);
    font-size: 0.875rem;
    color: var(--muted-foreground);
    text-decoration: underline;
  }
  
  .cart-continue:hover {
    color: var(--foreground);
  }
{%- endstyle -%}

<section class="cart-page">
  <div class="cart-container">
    <header class="cart-header">
      <h1 class="cart-title">{{ section.settings.title }}</h1>
    </header>
    
    {%- if cart.item_count > 0 -%}
      <form action="{{ routes.cart_url }}" method="post" class="cart-form">
        <div class="cart-grid">
          <div class="cart-items">
            {%- for item in cart.items -%}
              <div class="cart-item" data-cart-item data-line-item="{{ forloop.index }}">
                <a href="{{ item.url }}" class="cart-item-image">
                  {%- if item.image -%}
                    <img 
                      src="{{ item.image | image_url: width: 300 }}"
                      alt="{{ item.title | escape }}"
                      width="120"
                      height="160"
                      loading="lazy"
                    >
                  {%- else -%}
                    {{ 'product-1' | placeholder_svg_tag }}
                  {%- endif -%}
                </a>
                
                <div class="cart-item-details">
                  <h3 class="cart-item-title">
                    <a href="{{ item.url }}">{{ item.product.title }}</a>
                  </h3>
                  
                  {%- if item.variant.title != 'Default Title' -%}
                    <p class="cart-item-variant">{{ item.variant.title }}</p>
                  {%- endif -%}
                  
                  <p class="cart-item-price">{{ item.original_price | money }}</p>
                  
                  <div class="cart-item-quantity">
                    <button 
                      type="button"
                      class="cart-item-quantity-btn" 
                      data-quantity-change
                      data-line="{{ forloop.index }}"
                      data-quantity="{{ item.quantity | minus: 1 }}"
                      aria-label="Decrease quantity"
                      {% if item.quantity <= 1 %}disabled{% endif %}
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                      </svg>
                    </button>
                    
                    <span class="cart-item-quantity-value">{{ item.quantity }}</span>
                    
                    <button 
                      type="button"
                      class="cart-item-quantity-btn" 
                      data-quantity-change
                      data-line="{{ forloop.index }}"
                      data-quantity="{{ item.quantity | plus: 1 }}"
                      aria-label="Increase quantity"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                      </svg>
                    </button>
                  </div>
                  
                  <button 
                    type="button"
                    class="cart-item-remove" 
                    data-quantity-change
                    data-line="{{ forloop.index }}"
                    data-quantity="0"
                  >
                    Remove
                  </button>
                </div>
                
                <div class="cart-item-total">
                  {{ item.final_line_price | money }}
                </div>
              </div>
            {%- endfor -%}
          </div>
          
          <div class="cart-summary">
            <h2 class="cart-summary-title">Order Summary</h2>
            
            <div class="cart-summary-row">
              <span class="cart-summary-label">Subtotal ({{ cart.item_count }} items)</span>
              <span class="cart-summary-value">{{ cart.total_price | money }}</span>
            </div>
            
            <div class="cart-summary-row">
              <span class="cart-summary-label">Shipping</span>
              <span class="cart-summary-value">Calculated at checkout</span>
            </div>
            
            <div class="cart-summary-total">
              <span class="cart-summary-total-label">Total</span>
              <span class="cart-summary-total-value">{{ cart.total_price | money }}</span>
            </div>
            
            <button type="submit" name="checkout" class="btn-primary cart-checkout-btn">
              Checkout
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </button>
            
            <p class="cart-summary-note">Taxes and shipping calculated at checkout</p>
            
            <a href="{{ routes.all_products_collection_url }}" class="cart-continue">
              Continue Shopping
            </a>
          </div>
        </div>
      </form>
    {%- else -%}
      <div class="cart-empty">
        <svg class="cart-empty-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
          <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <path d="M16 10a4 4 0 0 1-8 0"></path>
        </svg>
        <h2 class="cart-empty-title">Your bag is empty</h2>
        <p class="cart-empty-text">Looks like you haven't added anything to your bag yet.</p>
        <a href="{{ routes.all_products_collection_url }}" class="btn-primary">
          Start Shopping
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Cart Page",
  "tag": "section",
  "class": "section-cart",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "YOUR BAG"
    }
  ]
}
{% endschema %}
