{%- comment -%}
  Main Contact Section - Oppozite Wears
  Contact form and information
{%- endcomment -%}

{%- style -%}
  .contact-section {
    padding: var(--section-spacing) var(--container-padding);
  }
  
  .contact-container {
    max-width: var(--container-max);
    margin: 0 auto;
  }
  
  .contact-header {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
  }
  
  .contact-subtitle {
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--muted-foreground);
    margin-bottom: var(--spacing-md);
  }
  
  .contact-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 400;
    margin: 0;
  }
  
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-3xl);
  }
  
  @media (min-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
  
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
  }
  
  .contact-info-item {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-md);
  }
  
  .contact-info-icon {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    color: var(--foreground);
  }
  
  .contact-info-label {
    font-family: var(--font-display);
    font-size: 0.75rem;
    font-weight: 400;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    margin-bottom: var(--spacing-xs);
  }
  
  .contact-info-value {
    font-size: 1rem;
    color: var(--muted-foreground);
    line-height: 1.6;
  }
  
  .contact-info-value a {
    color: inherit;
    text-decoration: none;
  }
  
  .contact-info-value a:hover {
    color: var(--foreground);
  }
  
  .contact-socials {
    display: flex;
    gap: var(--spacing-md);
    margin-top: var(--spacing-lg);
  }
  
  .contact-social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: var(--muted);
    color: var(--foreground);
    transition: all 0.3s ease;
  }
  
  .contact-social-link:hover {
    background: var(--foreground);
    color: var(--background);
  }
  
  .contact-form-wrapper {
    background: var(--muted);
    padding: var(--spacing-xl);
  }
  
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }
  
  .form-field {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }
  
  .form-label {
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }
  
  .form-input,
  .form-textarea {
    width: 100%;
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--background);
    border: 1px solid var(--border);
    font-family: var(--font-body);
    font-size: 1rem;
    color: var(--foreground);
    transition: border-color 0.2s ease;
  }
  
  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--foreground);
  }
  
  .form-textarea {
    min-height: 150px;
    resize: vertical;
  }
  
  .form-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-md);
  }
  
  @media (min-width: 480px) {
    .form-row {
      grid-template-columns: 1fr 1fr;
    }
  }
  
  .contact-form-submit {
    width: 100%;
    margin-top: var(--spacing-md);
  }
{%- endstyle -%}

<section class="contact-section">
  <div class="contact-container">
    <header class="contact-header">
      {%- if section.settings.subtitle != blank -%}
        <p class="contact-subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
      <h1 class="contact-title">{{ section.settings.title }}</h1>
    </header>
    
    <div class="contact-grid">
      <div class="contact-info">
        <div class="contact-info-item">
          <svg class="contact-info-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
            <polyline points="22,6 12,13 2,6"/>
          </svg>
          <div>
            <p class="contact-info-label">Email</p>
            <p class="contact-info-value">
              <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
            </p>
          </div>
        </div>
        
        <div class="contact-info-item">
          <svg class="contact-info-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
            <circle cx="12" cy="10" r="3"/>
          </svg>
          <div>
            <p class="contact-info-label">Location</p>
            <p class="contact-info-value">{{ section.settings.address }}</p>
          </div>
        </div>
        
        <div class="contact-info-item">
          <svg class="contact-info-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"/>
            <polyline points="12 6 12 12 16 14"/>
          </svg>
          <div>
            <p class="contact-info-label">Hours</p>
            <p class="contact-info-value">{{ section.settings.hours }}</p>
          </div>
        </div>
        
        <div class="contact-socials">
          {%- if settings.social_instagram != blank -%}
            <a href="{{ settings.social_instagram }}" class="contact-social-link" target="_blank" rel="noopener" aria-label="Instagram">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
              </svg>
            </a>
          {%- endif -%}
          
          {%- if settings.social_twitter != blank -%}
            <a href="{{ settings.social_twitter }}" class="contact-social-link" target="_blank" rel="noopener" aria-label="Twitter">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
              </svg>
            </a>
          {%- endif -%}
          
          {%- if settings.social_tiktok != blank -%}
            <a href="{{ settings.social_tiktok }}" class="contact-social-link" target="_blank" rel="noopener" aria-label="TikTok">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M9 12a4 4 0 1 0 4 4V4a5 5 0 0 0 5 5"/>
              </svg>
            </a>
          {%- endif -%}
        </div>
      </div>
      
      <div class="contact-form-wrapper">
        {%- form 'contact', class: 'contact-form' -%}
          {%- if form.posted_successfully? -%}
            <p class="form-message success">Thank you for your message! We'll get back to you soon.</p>
          {%- endif -%}
          
          {%- if form.errors -%}
            <p class="form-message error">{{ form.errors | default_errors }}</p>
          {%- endif -%}
          
          <div class="form-row">
            <div class="form-field">
              <label class="form-label" for="contact-name">Name</label>
              <input 
                type="text" 
                id="contact-name" 
                name="contact[name]" 
                class="form-input"
                required
              >
            </div>
            
            <div class="form-field">
              <label class="form-label" for="contact-email">Email</label>
              <input 
                type="email" 
                id="contact-email" 
                name="contact[email]" 
                class="form-input"
                required
              >
            </div>
          </div>
          
          <div class="form-field">
            <label class="form-label" for="contact-subject">Subject</label>
            <input 
              type="text" 
              id="contact-subject" 
              name="contact[subject]" 
              class="form-input"
            >
          </div>
          
          <div class="form-field">
            <label class="form-label" for="contact-message">Message</label>
            <textarea 
              id="contact-message" 
              name="contact[body]" 
              class="form-textarea"
              required
            ></textarea>
          </div>
          
          <button type="submit" class="btn-primary contact-form-submit">
            Send Message
          </button>
        {%- endform -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Contact Page",
  "tag": "section",
  "class": "section-contact",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "We'd love to hear from you"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "GET IN TOUCH"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "hello@oppozite.com"
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Address",
      "default": "Los Angeles, CA\nUnited States"
    },
    {
      "type": "text",
      "id": "hours",
      "label": "Hours",
      "default": "Mon-Fri: 9AM - 6PM PST"
    }
  ],
  "presets": [
    {
      "name": "Contact Page"
    }
  ]
}
{% endschema %}
