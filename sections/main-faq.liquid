  "name": "FAQ Page",
  "tag": "section",
  "class": "section-faq",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "FREQUENTLY ASKED QUESTIONS"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Find answers to common questions about orders, shipping, returns, and more."
    },
    {
      "type": "checkbox",
      "id": "show_contact",
      "label": "Show contact section",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
